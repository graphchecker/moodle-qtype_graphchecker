{
    "name": "Basic properties",
    "checks": {
        "edge_count": {
            "name": "Edge count",
            "description": "Checks if the graph has the given number of edges.",
            "params": [
                {
                    "param": "expected",
                    "name": "should be",
                    "type": "integer",
                    "default": 1,
                    "min": 0
                }
            ]
        },
        "vertex_count": {
            "name": "Vertex count",
            "description": "Checks if the graph has the given number of vertices.",
            "params": [
                {
                    "param": "expected",
                    "name": "should be",
                    "type": "integer",
                    "default": 1,
                    "min": 0
                }
            ]
        },
        "sumEdgeWeights": {
            "name": "Sum edge weights",
            "description": "Checks if the sum of edge weights matches a given integer.",
            "params": [
                {
                    "param": "expected",
                    "name": "should be",
                    "type": "integer"
                },
                {
                    "param": "highlighted",
                    "name": "Sum",
                    "type": "choice",
                    "options": ["all edges", "only highlighted edges"],
                    "default": "all edges"
                }
            ]
        },
        "connected": {
            "name": "Graph is connected",
            "description": "Check if the graph is connected"
        }
    }
}
