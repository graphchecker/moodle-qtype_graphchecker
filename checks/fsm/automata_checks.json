{
    "name": "Automata checks",
    "checks": {
        "check_dfa_language_from_words": {
            "name": "Compare DFA language to word list",
            "description": "Checks if the DFA accepts exactly the given words.",
            "params": [
                {
                    "param": "word_list",
                    "name": "Word list",
                    "type": "string_list"
                },
                {
                    "param": "length",
                    "name": "Length",
                    "type": "integer",
                    "min": 0,
                    "default": 4
                }
            ]
        },
        "check_dfa_language_from_answer": {
            "name": "Compare DFA language to given DFA",
            "description": "Checks if the DFA accepts exactly the same words as the given DFA.",
            "params": [
                {
                    "param": "other",
                    "name": "Other DFA",
                    "type": "graph"
                },
                {
                    "param": "length",
                    "name": "Length",
                    "type": "integer",
                    "min": 0,
                    "default": 4
                }
            ]
        },
        "check_dfa_max_states": {
            "name": "State count",
            "description": "Checks if the automaton has at most the given number of states.",
            "params": [
                {
                    "param": "max_states",
                    "name": "Maximum count",
                    "type": "integer",
                    "min": 0,
                    "default": 1
                }
            ]
        }
    }
}
